@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>404 Not Found</title>
	<style>
		body {
			font-family: Arial, sans-serif;
			background-color: #f4f4f4;
			color: #333;
			margin: 0;
			padding: 0;
			display: flex;
			justify-content: center;
			align-items: center;
			height: 100vh;
		}

		.container {
			text-align: center;
		}

		h1 {
			font-size: 3em;
			margin-bottom: 20px;
		}

		p {
			font-size: 1.2em;
			margin-bottom: 30px;
		}

		a {
			color: #007bff;
			text-decoration: none;
		}
	</style>
</head>
<body>
	<div class="container">
		<h1>404 Not Found</h1>
		<p>The page you're looking for does not exist.</p>
		<p><a href="/">Go to Home</a></p>
	</div>
</body>
</html>
