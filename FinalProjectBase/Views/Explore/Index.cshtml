@model DTOLayer.AppUserDTO

<div class="middle-sidebar-bottom">
	<div class="middle-sidebar-left pe-0">
		<div class="row">
			<div class="col-xl-12">
				<div class="card shadow-xss w-100 d-block d-flex border-0 p-4 mb-3">
					<div class="card-body d-flex align-items-center p-0">
						<h2 class="fw-700 mb-0 mt-0 font-md text-grey-900">Search for the desired user!</h2>
						<form asp-action="SearchUser" asp-controller="Explore" method="get" class="ms-auto d-flex">
							<div class="search-form-2">
								<input name="userName" type="text" class="form-control text-grey-500 mb-0 bg-greylight theme-dark-bg border-0" placeholder="Search here ...">
							</div>
							<button type="submit" class="btn btn-primary" style="color: white; margin-left: 15px">Search</button>
						</form>
					</div>
				</div>


				<div class="row ps-2 pe-1">
					@if (Model is not null)
					{
						<div class="col-md-3 col-xss-6 pe-2 ps-2">
							<div class="card h300 d-block border-0 shadow-xss rounded-3 bg-gradiant-bottom overflow-hidden mb-3 bg-image-cover" style="background-image: url(images/s-1.jpg);">
								<div class="card-body d-block w-100 position-absolute bottom-0 text-center">
									<figure class="avatar ms-auto me-auto mb-0 position-relative w75 z-index-1"><img src="/images/Account/@Model.Image.ImageName" alt="image" class="float-right p-0 bg-white rounded-circle w-100 shadow-xss"></figure>
									<div class="clearfix"></div>
									<h4 class="fw-600 position-relative z-index-1 ls-3 font-xssss text-white mt-2 mb-1">@Model.Username @Model.FirstName @Model.LastName</h4>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>

</div>
